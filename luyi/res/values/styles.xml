<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="my_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/my_edittext</item>
    </style>
    <style name="loading_bar">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:indeterminateDrawable">@drawable/loading_bar_bg_blue_normal</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateBehavior">repeat</item>
    </style>
    <style name="loading_bar_red">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:indeterminateDrawable">@drawable/loading_bar_bg_blue_normal</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateBehavior">repeat</item>
    </style>
    <style name="listview_bg">
        <item name="android:listSelector">@drawable/listview_style</item>
    </style>
</resources>
